generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id        Int      @id @default(autoincrement())
  name      String
  price     Float
  category  String
  image     String
  available Boolean  @default(true)
  createdAt DateTime @default(now())
    quantity  Int     @default(0)  // ← اضف العمود هنا

}
